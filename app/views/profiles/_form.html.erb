<div class="authform">
<%= form_for(@profile) do |f| %>
  <% if @profile.errors.any? %>
    <div class= "alert alert-danger m-t-15">
      <button type="button" class="close" data-dismiss="alert">x</button>
      <h4><span class="glyphicon glyphicon-exclamation-sign"></span> <%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h4>
      <ul>
      <% @profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <fieldset>
    <div class="form-group">
      <%= f.label :first_name %>
      <%= f.text_field :first_name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :last_name %>
      <%= f.text_field :last_name, rows: "5", class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :bio %>
      <%= f.text_area :bio, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :education_level %><br>
      <%= f.select :education_level, 
      Profile.education_levels.keys.map {|level| [level.titleize, level] }, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :phone_number %>
      <%= f.number_field :phone_number, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :summary_of_projects %>
      <%= f.text_area :summary_of_projects, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :skills, :class => 'col-lg-6 control-label' %>
      <%= f.text_field :skills, class: 'form-control' %>
    </div>
    <div class="form-group">
      <strong>Research Fields:<br></strong>
      <% @profile.profile_research_fields.each do |profile_research_field| %>
        <%= profile_research_field.research_field.category %><br>
      <% end %>
      <%= link_to 'Edit Research Fields', profile_research_fields_path %>
    </div>
  </fieldset>

  <%= f.submit 'Submit', :class => 'btn btn-lg btn-primary' %>
<% end %>
</div>
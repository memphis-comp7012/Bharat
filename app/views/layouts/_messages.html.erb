<%# Rails flash messages styled for Bootstrap 3.0 %>
<% flash.each do |name, msg| %>
  <% if msg.is_a?(String) %>
    <div class="alert alert-<%= name.to_s == 'notice' ? 'success' : 'danger' %> col-sm-offset-3 col-sm-6">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= content_tag :div, raw('<span class="glyphicon glyphicon-exclamation-sign"></span> ' + msg), :id => "flash_#{name}" %>
    </div>
  <% end %>
<% end %>

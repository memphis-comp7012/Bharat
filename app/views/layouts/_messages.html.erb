<%# Rails flash messages styled for Bootstrap 3.0 %>
<% flash.each do |name, msg| %>
    <% if msg.is_a?(String) %>
        <div class="alert alert-<%= name.to_s == 'notice' ? 'success' : 'danger' %> <%= user_signed_in? ? 'col-sm-8' : 'col-sm-offset-3 col-sm-6' %> m-t-15">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
          <%= content_tag :div, raw('<span class="glyphicon glyphicon-exclamation-sign"></span> ' + msg), :id => "flash_#{name}" %>
        </div>
        <div class="clearfix"></div>

    <% end %>
<% end %>

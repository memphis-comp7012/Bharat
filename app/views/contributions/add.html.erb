<div class="row">
<div class="col-lg-8">

  <h1>New Contribution</h1>

  <h5>Project Name: <%= @project.name %></h5>
  <h5>Team Member: <%= @team_member.profile.first_name + ' ' + @team_member.profile.last_name %></h5>

  <%= form_for(@contribution, url: add_contribution_to_project_path) do |f| %>
      <% if @contribution.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@contribution.errors.count, "error") %> prohibited this contribution from being saved:</h2>

            <ul>
              <% @contribution.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <div class="field">
        <%= f.label :score %><br>
        <%= f.number_field :score, class: "form-control" %>
      </div>
      <div class="field">
        <div class="form-group">
          <%= f.label 'Amount (in dollars)', class: "sr-only" %><br>
          <div class="input-group">
            <div class="input-group-addon">$</div>
            <%= f.number_field :money_received, class: "form-control"  %>
            <div class="input-group-addon">.00</div>
          </div>
        </div>
      </div>
      <div class="actions">
        <%= f.submit 'Add Contribution', :class => 'btn btn-lg btn-primary' %>
      </div>
  <% end %>


  <%= link_to 'Back', contributions_path %>
</div>

</div>
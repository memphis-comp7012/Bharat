<div class="authform">
  <%= form_for(@task) do |f| %>
      <%= display_error_messages(@task) %>

      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_field :description, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :status %><br>
        <%= f.select :status,
                     Task.task_statuses.keys.map { |status| [status.titleize, status] }, {}, {:class => "form-control custom"} %>
      </div>
      <div class="form-group">
        <%= f.label :assigned_user %><br>
        <select name="task[assigned_user]" class="form-control custom">
          <% @users = User.all %>
          <% @users.each do |user| %>
              <% if user.profile %>
                  <option value="<%= user.id %>">
                    <%= user.profile.first_name + ' ' + user.profile.last_name %></option>
              <% end %>
          <% end %>
        </select>
      </div>
      <div class="form-group">
        <%= f.label :due_date %><br>
        <%= f.date_select :due_date, {}, {:class => "form-control custom"} %>
      </div>
      <div class="actions">
        <%= f.submit 'Submit', :class => 'btn btn-lg btn-primary' %>
      </div>
  <% end %>
</div>

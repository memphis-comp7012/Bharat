<%= devise_error_messages! %>
<div class="authform">
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form', :class => 'form-horizontal'}) do |f| %>
      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-2">
          <h2>Login</h2>
        </div>
      </div>
    <div class="form-group">
      <%= f.label :email, :class => 'col-lg-3 control-label' %>
      <div class="col-lg-4">
        <%= f.email_field :email, :autofocus => true, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :password, :class => 'col-lg-3 control-label' %>
      <div class="col-lg-4">
        <%= f.password_field :password, class: 'form-control' %>
      </div>
    </div>
      <% if devise_mapping.rememberable? -%>
      <div class="form-group">
      <div class="col-sm-offset-3 col-sm-2">
        <div class="checkbox">
          <label>
            <%= f.check_box :remember_me %> Remember me
          </label>
        </div>
      </div>
      <%- if devise_mapping.recoverable? %>
          <div class="col-sm-2 text-right">
            <p><%= link_to "Forgot password?", new_password_path(resource_name) %></p>
          </div>
      <% end -%>
      </div>
      <% end -%>
      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-2">
          <%= f.submit 'Login', :class => 'btn btn-lg btn-primary btn-block' %>
        </div>
      </div>
      <%- if devise_mapping.registerable? %>
      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-4">
            <div class="m-t-15">
              Don't have an account? <%= link_to 'Register', new_registration_path(resource_name)  %>
            </div>
        </div>
      </div>
      <% end -%>
<% end %>
</div>

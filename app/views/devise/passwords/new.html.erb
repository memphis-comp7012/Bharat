<div class="authform">
  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :role => 'form', :class => 'form-horizontal'}) do |f| %>
    <div class="form-group">
      <div class="col-sm-offset-3 col-sm-7">
        <%= devise_error_messages! %>
        <h2>Forgot your password?</h2>
        <p>We'll send password reset instructions.</p>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :email, :class => 'col-lg-3 control-label' %>
      <div class="col-lg-4">
        <%= f.email_field :email, :autofocus => true, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-3 col-sm-2">
        <%= f.submit 'Reset Password', :class => 'btn btn-lg btn-primary btn-block' %>
      </div>
    </div>
  <% end %>
</div>
